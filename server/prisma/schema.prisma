generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Staff {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  role      Role
  sessionId Int?
  session   Session? @relation(fields: [sessionId], references: [id])
}

model Session {
  id      Int     @id
  token   String  @unique
  staffId Int
  user    Staff[]
}

enum Role {
  Coach
  Manager
  Director
}
